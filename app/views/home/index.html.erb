<div class="">
  <% flash.each do |name, msg| %>
  <% content_tag :div, msg, class: "alert #{name == 'error' ? 'alert-danger' : 'alert-info'}" %>
  <% end %>
</div>

<% if !current_user %>
  <div>
      <%= form_for :user, url: sessions_path do |f| %>
        <%= f.label :email %>
        <%= f.text_field :email %>
        <br>
        <%= f.label :password %>
        <%= f.text_field :password %>
        <br>
        <%= f.submit "Login" %>
      <% end %>
  </div>
  <%= button_to "Sign up", new_user_path, method: :get %>
<% end %>

<ui-view></ui-view>
<div ui-view="featured"></div>
